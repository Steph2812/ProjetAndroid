<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    tools:context=".ContactActivity">

    <TextView
        android:id="@+id/contact"
        android:layout_width="336dp"
        android:layout_height="43dp"
        android:layout_marginStart="16dp"
        android:layout_marginTop="96dp"
        android:text="@string/contact_Contact"
        android:textAlignment="center"
        android:textColor="@color/colorPrimaryDark"
        android:textSize="18sp"
        android:textStyle="bold|italic"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.355"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/contactDe"
        android:layout_width="199dp"
        android:layout_height="49dp"
        android:text="@string/contact_de"
        android:textColor="@android:color/background_dark"
        app:layout_constraintBottom_toBottomOf="@+id/imageContact"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.208"
        app:layout_constraintStart_toEndOf="@+id/imageContact"
        app:layout_constraintTop_toTopOf="@+id/imageContact" />

    <ImageView
        android:id="@+id/imageContact"
        android:layout_width="93dp"
        android:layout_height="56dp"
        android:layout_marginTop="60dp"
        app:layout_constraintStart_toStartOf="@+id/contact"
        app:layout_constraintTop_toBottomOf="@+id/contact"
        app:srcCompat="@android:drawable/ic_menu_camera" />

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/contactRecycler"
        android:layout_width="309dp"
        android:layout_height="323dp"
        android:layout_marginTop="32dp"
        app:layout_constraintEnd_toEndOf="@+id/contactDe"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="@+id/imageContact"
        app:layout_constraintTop_toBottomOf="@+id/contactDe" />

</androidx.constraintlayout.widget.ConstraintLayout>